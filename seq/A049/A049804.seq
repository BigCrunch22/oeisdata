%t A049804 a[n_] := Sum[Mod[n, 4^j], {j, 1, Length[IntegerDigits[n, 4]] - 1}];
%t A049804 Array[a, 105] (* _Jean-Fran√ßois Alcover_, Dec 31 2021 *)
