%p A331562 b:= proc(l, q) option remember; (n-> `if`(n<2, 1, add(
%p A331562      `if`(l[j]=1, `if`(j in [1, n], b(subsop(j=[][], l),
%p A331562      `if`(j=1, 0, n)), 0), b(subsop(j=l[j]-1, l), j)), j=
%p A331562      `if`(q<0, 1..n, max(1, q-1)..min(n, q+1)))))(nops(l))
