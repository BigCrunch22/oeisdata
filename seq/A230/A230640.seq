%p A230640 if n<=1 then RETURN([0, 0]);
%p A230640 else
%p A230640 B:=(f(ceil(n/2))[2] + f(floor(n/2))[2] + 2)/2;
%p A230640 M:=3^B+f(floor(n/2))[2]+1; RETURN([B, M]); fi;
%p A230640 end proc;
