%t A230055 b[u_, o_, t_, k_] := b[u, o, t, k] = If[u + o == 0, 1, If[t < k - 1, Sum[b[u + j - 1, o - j, t + 1, k], {j, 1, o}], 0] + Sum[b[u - j, o + j - 1, 0, k], {j, 1, u}]];
%t A230055 a[n_] := b[n, 0, 0, 7] - b[n, 0, 0, 6];
