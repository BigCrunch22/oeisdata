%p A143453 A := proc (n::nonnegint, k::nonnegint) option remember; if k=0 then 3^n elif n<=k+1 then 2*n+1 else A(n-1, k) +2*A(n-k-1, k) fi end: seq(seq(A(n,d-n), n=0..d), d=0..14);
%t A143453 a[n_, 0] := 3^n; a[n_, k_] /; n <= k+1 := 2*n+1; a[n_, k_] := a[n, k] = a[n-1, k] + 2*a[n-k-1, k]; Table[a[n-k, k], {n, 0, 14}, {k, n, 0, -1}] // Flatten (* _Jean-FranÃ§ois Alcover_, Dec 11 2013 *)
