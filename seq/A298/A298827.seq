%o A298827 (Python)
%o A298827 def fmod(n, mod):
%o A298827     return (pow(3, n, mod) + 2) % mod
%o A298827 def f(n):
%o A298827     return pow(3, n) + 2
%o A298827 #terms is the number of terms to generate
%o A298827 terms = 20
%o A298827 for x in range(1, terms + 1):
%o A298827     div = f(x)
%o A298827     y = x + 1
%o A298827     while fmod(y, div) != 0:
%o A298827         y += 1
%o A298827     print(y - x)
