%e A286096 ...
%t A286096 row[n_] := If[n==0, {1}, 2^(n-1)*TrigReduce[Cos[x]^n] /. Cos[Times[k_., x]] -> x^k // CoefficientList[#, x]&]; Table[row[n], {n, 0, 12}] // Flatten
%t A286096 (* Second program: *)
%t A286096 T[n_, n_] = 1; T[n_, k_] /; k == n-1 || k>n = 0; T[n_, 1] := 2 T[n-1, 0] + T[n-1, 2]; T[n_, 0] := T[n-1, 1]; T[n_, k_] /; 1 < k <= n := T[n, k] = T[n-1, k-1] + T[n-1, k+1]; T[_, _] = 0; Table[T[n, k], {n, 0, 12}, {k, 0, n}] // Flatten (* _Jean-FranÃ§ois Alcover_, May 02 2017 *)
