%t A319549 a[n_]:=(-1)^Floor[n/8]*Sum[(1-Sign[Mod[n-i,8]])*Product[n-j+1,{j,1,i}],{i,1,7}]+Sum[(-1)^(Floor[i/8]+1)*(1-Sign[Mod[i,8]])*Product[i-j+1,{j,1,7}],{i,1,n}]; Array[a, 30] (* _Stefano Spezia_, Sep 23 2018 *)
