%t A152060 M[n_] := SparseArray[{Band[{1, 1}] -> 2, Band[{1, 2}] -> -1, Band[{2, 1}] -> -1, {1, n} -> 1, {n, 1} -> 1}, {n, n}];
%t A152060 row[0] = {1}; row[1] = {1, -2};
%t A152060 row[n_] := (-1)^n CharacteristicPolynomial[M[n], x] // CoefficientList[#, x]& // Reverse;
