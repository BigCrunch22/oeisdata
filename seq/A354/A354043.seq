%p A354043 T := (n, k) -> ifelse(n = 0, 1, (-1)^n*((n + 1)!/k!)*add(binomial(2*k - 2*j, k + 1)*binomial(2*n + 1, 2*j + 1)*bernoulli(2*n - 2*j) / (j - k), j = 0..(k-1)/2)): for n from 0 to 8 do seq(T(n, k), k = 0..n) od;
