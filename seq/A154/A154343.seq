%p A154343 S := proc(n,k) local v,c; c := m -> if irem(m+1,4) = 0 then 0 else 1/((-1)^iquo(m+1,4)*2^iquo(m,2)) fi; add((-1)^(v)*binomial(k,v)*2^n*c(k)*(v+3/2)^n,v=0..k) end: seq(print(seq(S(n,k),k=0..n)),n=0..8);
%t A154343 c[m_] := If[Mod[m+1, 4] == 0, 0, 1/((-1)^Quotient[m+1, 4]*2^Quotient[m, 2])]; s[n_, k_] := Sum[(-1)^v*Binomial[k, v]*2^n*c[k]*(v+3/2)^n, {v, 0, k}]; Table[s[n, k], {n, 0, 8}, {k, 0, n}] // Flatten (* _Jean-Fran√ßois Alcover_, Jul 30 2013, after Maple *)
