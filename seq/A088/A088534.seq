%o A088534 (Python)
%o A088534 def A088534(n):
%o A088534     c = 0
%o A088534     for y in range(n+1):
%o A088534         if y**2 > n:
%o A088534             break
%o A088534         for x in range(y+1):
%o A088534             z = x*(x+y)+y**2
%o A088534             if z > n:
%o A088534                 break
%o A088534             elif z == n:
%o A088534                 c += 1
%o A088534     return c # _Chai Wah Wu_, May 16 2022
