%t A366462 c[n_] := PartitionsP[n]; q[n_, k_] := q[n, k] = IntegerPartitions[n][[k]];
%t A366462 r[n_, k_] := r[n, k] = Join[q[n, k], ConstantArray[0, n - Length[q[n, k]]]];
%t A366462 d[u_, v_] := d[u, v] = Total[Abs[u - v]];
%t A366462 f[n_, k_, h_] := f[n, k, h] = Length[Select[q[n, k], # >= h &]];
%t A366462 c[n_, k_] := Table[f[n, k, h], {h, 1, Max[q[n, k]]}];
%t A366462 r1[n_, k_] := r1[n, k] = Join[c[n, k], ConstantArray[0, n - Length[c[n, k]]]];
%t A366462 t = Table[d[r[n, k], r1[n, k]], {n, 1, 16}, {k, 1, PartitionsP[n]}]
%t A366462 TableForm[t]
%t A366462 a[n_, k_] := Count[t[[n]], k]
%t A366462 tt = Table[a[n, k], {n, 1, 16}, {k, 0, 2 n - 2, 2}];
%t A366462 Flatten[tt]
