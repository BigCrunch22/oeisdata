%t A366693 a[nthPrimorals_Integer?NonNegative (* Increase nthPrimorals to use more positive and negative primorals in sum *), numberOfPrimorals_Integer?NonNegative (* Increase numberOfPrimorals to increase cap of minimal number of primorials *)] := a[nthPrimorals, numberOfPrimorals] = Module[{A002110, f, h, s}, A002110[nthPrimorals] = Join[{1}, Denominator[Accumulate[1/Prime[Range[nthPrimorals]]]]]; A002110[n_] := A002110[n] = Join[{1}, Denominator[Accumulate[1/Prime[Range[n]]]]]; f[n_] := f[n] = Flatten[Table[p*r, {p, A002110[n - 1]}, {r, {1, -1}}]]; h[n_, u_] := h[n, u] = Sort[Select[DeleteDuplicates[Flatten[Table[Sum[p[j], {j, 1, u}], ##] & @@ Table[{p[j], f[n]}, {j, 1, u}]]], # > 0 &]]; s = Table[Infinity, {A002110[nthPrimorals][[-1]]}]; Monitor[Do[If[s[[k]] > k, s[[k]] = l], {l, 1, numberOfPrimorals}, {k, h[nthPrimorals, l]}], {l, k}]; s = Join[{0}, s]; If[MemberQ[s, Infinity], s[[1 ;; Position[s, Infinity][[1, 1]] - 1]], s]]; a[6, 6] (* _Robert P. P. McKone_, Oct 21 2023 *)
