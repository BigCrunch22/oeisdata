%o A087230 (Python)
%o A087230 def A087230(n): return (~(m:=6*n+4) & m-1).bit_length() # _Chai Wah Wu_, Jul 02 2022
%o A087230 (Perl)
%o A087230 sub a {
%o A087230   my $nv= ((shift() << 1) | 1);
%o A087230   my $bp= 1;
%o A087230   while (($nv & 1) xor ($nv & 2)) {
%o A087230     $nv>>= 1;
%o A087230     $bp++;
%o A087230   }
%o A087230   return $bp;
%o A087230 } # _Ruud H.G. van Tol_, Nov 16 2021
