%o A309828 def Test(n):
%o A309828     s = str(n)
%o A309828     ps, ss = s[0:len(s)//2], s[len(s)//2:len(s)]
%o A309828     return int(ss) == 2*int(ps)+1 and s[len(s)//2] != "0"
%o A309828 n, a = 1, 4
%o A309828 while n < 23:
%o A309828     if Test(a*a):
%o A309828         print(n,a*a)
%o A309828         n = n+1
