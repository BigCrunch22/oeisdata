%p A086853 a:= n-> ceil(coeff(S(n), t, 2)):
%p A086853 seq(a(n), n=0..25);  # _Alois P. Heinz_, Jan 11 2013
%t A086853 s[n_] := s[n] = If[n<4, {1, 1, 2*t, 4*t+2*t^2}[[n+1]], Expand[(n+1-t)*s[n-1] - (1-t)*(n-2+3*t)*s[n-2] - (1-t)^2*(n-5+t)*s[n-3] + (1-t)^3*(n-3)*s[n-4]]]; t[n_, k_] := Ceiling[Coefficient[s[n], t, k]]; a[n_] := t[n, 2]; Table[a[n], {n, 0, 22}] (* _Jean-FranÃ§ois Alcover_, Mar 11 2014, after _Alois P. Heinz_ *)
