%t A294746 b[n_, r_, p_, k_] := b[n, r, p, k] = If[n < r, 0, If[r == 0, If[n == 0, p!, 0], Sum[b[n - j, k*(r - j), p + j, k]/j!, {j, 0, Min[n, r]}]]];
%t A294746 A[n_, k_] := If[k == 0, 1, b[k*n + 1, 1, 0, k + 1]];
