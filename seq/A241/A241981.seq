%p A241981       b(n-i*j, i-1), j=0..n/i)))
%p A241981     end:
%p A241981 A:= (n, k)-> add(binomial(n-1, j-1)*n^(n-j)*b(j, min(j, k)), j=0..n):
%p A241981 T:= (n, k)-> A(n, k) -`if`(k=0, 0, A(n, k-1)):
%p A241981 seq(seq(T(n, k), k=0..n), n=0..10);
%t A241981 multinomial[n_, k_List] := n!/Times @@ (k!); b[n_, i_] := b[n, i] = If[n == 0, 1, If[i<1, 0, Sum[(i-1)!^j*multinomial[n, {n-i*j, Sequence @@ Table[i, {j}]}]/j!*b[n-i*j, i-1], {j, 0, n/i}]]]; A[n_, k_] := Sum[Binomial[n-1, j-1]*n^(n-j)*b[j, Min[j, k]], {j, 0, n}]; T[0, 0] = 1; T[n_, k_] := A[n, k] - If[k == 0, 0, A[n, k-1]]; Table[Table[T[n, k], {k, 0, n}], {n, 0, 10}] // Flatten (* _Jean-FranÃ§ois Alcover_, Jan 06 2015, after _Alois P. Heinz_ *)
