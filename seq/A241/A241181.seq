%t A241181 A241181[n_] := Module[{c, nx},
%t A241181    If[PrimeQ[n], Return[0]];
%t A241181    c = 1; nx = n;
%t A241181    While[ ! AnyTrue[nx = Flatten[nx + IntegerDigits[nx]], PrimeQ], c++];
%t A241181    Return[c]];
