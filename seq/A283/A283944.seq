%o A283944 z = 100;
%o A283944 s(n) = if(n<1, 1, s(n - 1) + 1 + floor(n*r));
%o A283944 p(n) = n + 1 + sum(k=0, n, floor((n - k)/r));
%o A283944 u = v = vector(z + 1);
%o A283944 for(n=1, 101, (v[n] = s(n - 1)));
%o A283944 for(n=1, 101, (u[n] = p(n - 1)));
