%p A324376 g:= proc(n) local i; 1; for i from 2 do
%p A324376       if n=% then true; break elif n<% then false; break fi;
%p A324376       %*i od; g(n):=%
%p A324376     end:
%p A324376 b:= proc(s) option remember; (n-> `if`(n=0, 1, add(`if`(
%p A324376       g(abs(n-j)), b(s minus {j}), 0), j=s)))(nops(s))
%p A324376     end:
%p A324376 a:= n-> b({$1..n}):
