%t A324372 b[s_] := b[s] = With[{n = Length[s]}, If[n==0, 1, Sum[If[
%t A324372      PrimeQ[Abs[n-j]], b[s ~Complement~ {j}], 0], {j, s}]]];
%t A324372 a[n_] := b[Range[n]];
