%o A338136 def A338136(n):
%o A338136     k, n2, m = 2,  n**2, (n+1)**2
%o A338136     while True:
%o A338136         j, nj = 2, n2
%o A338136         while nj < m:
%o A338136             r = m % nj
%o A338136             if r > 1 and is_power(r):
%o A338136                 return k
