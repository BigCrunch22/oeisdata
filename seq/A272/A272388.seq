%t A272388 Do[
%t A272388   S1=heron[a,b,c];
%t A272388   If[S1//IntegerQ//Not,Continue[]];
%t A272388   Do[
%t A272388     S2=heron[a,e,f];
%t A272388     If[S2//IntegerQ//Not,Continue[]];
%t A272388     Do[
%t A272388       If[b==e&&c>f||b==f&&c>e,Continue[]];
