%t A272388 aMax=360(*WARNING:takes a long time*);
%t A272388 heron=1/4Sqrt[(#1+#2+#3)(-#1+#2+#3)(#1-#2+#3)(#1+#2-#3)]&;
%t A272388 cayley=1/24Sqrt[2Det[{
%t A272388   {0,1,1,1,1},
%t A272388   {1,0,#1^2,#2^2,#6^2},
%t A272388   {1,#1^2,0,#3^2,#5^2},
