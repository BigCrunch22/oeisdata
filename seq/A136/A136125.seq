%p A136125 T:= n-> (p-> (seq(coeff(p, x, i), i=1..n)))(b(n, 0)):
%p A136125 seq(T(n), n=1..12);  # _Alois P. Heinz_, Dec 08 2018
%t A136125 T[n_, n_] := (n-1)!;
%t A136125 T[n_, k_] := n!/(k(k+1));
