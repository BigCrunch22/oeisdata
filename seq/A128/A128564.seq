%t A128564 b[u_, o_] := b[u, o] = Expand[If[u + o == 0, 1, Sum[b[u + j - 1, o - j]* x^(u+j-1), {j, 1, o}] + Sum[b[u-j, o+j-1]*x^(u-j), {j, 1, u}]]];
%t A128564 T[n_, k_] := Coefficient[b[n+1, 0], x, Quotient[(n+1)*k, 2]];
