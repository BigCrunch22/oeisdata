%p A248687 a:= n-> add(b(n,k), k=0..n):
%p A248687 seq(a(n), n=1..22);  # _Alois P. Heinz_, Feb 20 2024
%t A248687 f[n_, k_] := f[n, k] = n!/Product[Floor[(n + i)/k]!, {i, 0, k - 1}]
