%p A267006 seq(abs( floor(sqrt(n+2)) - 2*floor(sqrt(n+1)) + floor(sqrt(n)) ), n = 0..100); # _Peter Bala_, Apr 08 2017
%t A267006 rule=84; rows=20; ca=CellularAutomaton[rule,{{1},0},rows-1,{All,All}]; (* Start with single black cell *) catri=Table[Take[ca[[k]],{rows-k+1,rows+k-1}],{k,1,rows}]; (* Truncated list of each row *) Flatten[catri] (* Triangle Representation of CA *)
%o A267006 (PARI) for(n=0, 100, print1(abs(sqrtint(n + 2) - 2*sqrtint(n + 1) + sqrtint(n)),", ")) \\ _Indranil Ghosh_, Apr 08 2017
