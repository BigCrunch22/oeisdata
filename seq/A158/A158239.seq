%t A158239 MatrixJoinH[A_, B_] := Transpose[Join[Transpose[A], Transpose[B]]] KroneckerProduct[M_, N_] := Module[{M1, N1, LM, LN, N2}, M1 = M; N1 = N; LM = Length[M1]; LN = Length[N1]; Do[M1[[i, j]] = M1[[i, j]]N1, {i, 1, LM}, {j, 1, LM}]; Do[M1[[i, 1]] = MatrixJoinH[M1[[i, 1]], M1[[i, j]]], {j, 2, LM}, {i, 1, LM}]; N2 = {}; Do[AppendTo[N2, M1[[i, 1]]], {i, 1, LM}]; N2 = Flatten[N2]; Partition[N2, LM*LN, LM*LN]];
