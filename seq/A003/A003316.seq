%p A003316 h:= proc(l) local n; n:= nops(l); add(i, i=l)! /mul(mul(1+l[i]-j+
%p A003316       add(`if`(l[k]>=j, 1, 0), k=i+1..n), j=1..l[i]), i=1..n) end:
%p A003316 g:= (n, i, l)-> `if`(n=0 or i=1, h([l[], 1$n])^2, `if`(i<1, 0,
%p A003316                 add(g(n-i*j, i-1, [l[], i$j]), j=0..n/i))):
%p A003316 a:= n-> add(k* (g(n-k, k, [k])), k=1..n):
%p A003316 seq(a(n), n=1..22);  # _Alois P. Heinz_, Jul 05 2012
%t A003316 h[l_List] := Module[{n = Length[l]}, Total[l]!/Product[Product[1+l[[i]]-j+Sum[If[l[[k]] >= j, 1, 0], {k, i+1, n}], {j, 1, l[[i]]}], {i, 1, n}]]; g[n_, i_, l_] := If[n == 0 || i == 1, h[Join[l, Array[1&, n]]]^2, If[i<1, 0, Sum[g[n-i*j, i-1, Join[l, Array[i&, j]]], {j, 0, n/i}]]]; a[n_] := Sum[k*g[n-k, k, {k}], {k, 1, n}]; Table[a[n], {n, 1, 22}] (* _Jean-FranÃ§ois Alcover_, Feb 11 2014, after _Alois P. Heinz_ *)
