%t A057593 period[lst_] := Module[{n, i, j}, n=Length[lst]; For[j=2, j <= n, j++, For[i=1, i<j, i++, If[lst[[i]] == lst[[j]], Return[{i-1, j-i}]]]]; Return[{0, 0}]]; T[n_, k_] := Module[{t, p}, t=Table[PowerMod[k, i, n], {i, 0, 2n}]; p=period[t][[2]]; p]; Table[T[n, k], {n, 2, 14}, {k, 1, n - 1}] // Flatten (* _Jean-FranÃ§ois Alcover_, Feb 04 2015 *)
