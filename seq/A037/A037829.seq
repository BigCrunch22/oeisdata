%p A037829 A037829 := proc(n)
%p A037829     a := 0 ;
%p A037829     dgs := convert(n,base,6);
%p A037829     for i from 2 to nops(dgs) do
%p A037829         if op(i,dgs)>=op(i-1,dgs) then
