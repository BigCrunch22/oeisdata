%p A037826 A037826 := proc(n)
%p A037826     a := 0 ;
%p A037826     dgs := convert(n,base,3);
%p A037826     for i from 2 to nops(dgs) do
%p A037826         if op(i,dgs)>=op(i-1,dgs) then
%p A037826             a := a+1 ;
%p A037826         end if;
%p A037826     end do:
%p A037826     a ;
