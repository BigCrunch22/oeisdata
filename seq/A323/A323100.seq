%p A323100 s := sqrt(2): h := n -> [ 0, -s, -2, -s, 0, s, 2,  s][1 + modp(n+1, 8)]:
%p A323100 T := proc(n, k) option remember;
%p A323100 if n = 0 then return 2^(k - 1) + 2^((k - 3)/2)*h(k + 2) fi;
%p A323100 if k = 0 then return 2^(n - 1) + 2^((n - 3)/2)*h(n) fi;
%p A323100 T(n, k-1 ) + T(n-1, k) end:
%p A323100 for n from 0 to 9 do seq(T(n, k), k=0..9) od; # _Peter Luschny_, Jan 12 2019
%t A323100 T[n_, k_] := Sum[Binomial[n, i] Binomial[k, j] Mod[Binomial[i - j, 2], 2], {i, 0, n}, {j, 0, k}];
