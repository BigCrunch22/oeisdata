%e A321480 - hence a(16) = 1.
%t A321480 noz[n_] := FromDigits[DeleteCases[IntegerDigits[n], 0]];
%t A321480 A321480[n_] := Block[{k = n}, Nest[noz[--k + #] &, n, Max[0, n-1]]];
