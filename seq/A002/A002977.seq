%o A002977 a002977 n = a002977_list !! (n-1)
%o A002977 a002977_list = f $ singleton 1 where
%o A002977    f :: Set Integer -> [Integer]
%o A002977    f s = m : (f $ insert (3*m+1) $ insert (2*m+1) s') where
%o A002977         (m, s') = deleteFindMin s
