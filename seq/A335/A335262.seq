%o A335262 (Python)
%o A335262 def T(num_rows):
%o A335262     t, s = 1, 1
%o A335262     L, R = [0], [0]
%o A335262     for n in range(1, num_rows):
%o A335262         R.reverse()
%o A335262         R.insert(0, t)
%o A335262         L.extend(R)
%o A335262         t, s = t+s+1, s+1
%o A335262     return L
