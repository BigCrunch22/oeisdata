%o A108644 (SageMath)
%o A108644 def A(n,k):
%o A108644     if k<n: return k+n*(n-1)
%o A108644     elif k==n: return n^2
%o A108644     else: return n+(k-1)^2
%o A108644 def A108644(n,k): return A(n-k+1,k)
