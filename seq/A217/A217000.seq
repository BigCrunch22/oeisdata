%p A217000   t:=tn(k):
%p A217000   p := f(k):
%p A217000   if p = floor(p) then
%p A217000     p = floor(p):
%p A217000     if isprime(p) then
%p A217000       T := [op(T), t]:
%p A217000       N := [op(N), k]:
%p A217000       P := [op(P), p]:
%p A217000     end if:
%p A217000   end if:
%p A217000   if nops(T) = 50 then
%p A217000     break:
%p A217000   end if:
%p A217000 end do:
%p A217000 T := T;
%t A217000 tri = 0; t = {}; Do[tri = tri + n; If[PrimeQ[(tri + 1)/2], AppendTo[t, tri]], {n, 500}]; t (* _T. D. Noe_, Sep 24 2012 *)
