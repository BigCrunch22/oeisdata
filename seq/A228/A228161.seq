%e A228161   0, 1,
%e A228161  -1, 2,  1,
%e A228161   0, 3,  4,  1,
%e A228161   1, 4, 15,  6, 1,
%e A228161   0, 5, 56, 35, 8, 1,
%e A228161   ...
%t A228161 nn = 10; Flatten[Table[ChebyshevU[i - j, j], {i, 0, nn}, {j, 0, i}]] (* _T. D. Noe_, Aug 16 2013 *)
