%p A375265 a := n -> ifelse(irem(n, 3) = 0, iquo(n, 3), ifelse(irem(n, 2) = 0, iquo(n, 2), 3*n + 1)): seq(a(n), n = 1..69);  # _Peter Luschny_, Aug 14 2024
%t A375265 A375265[n_] := Which[Divisible[n, 3], n/3, Divisible[n, 2], n/2, True,3*n + 1];
