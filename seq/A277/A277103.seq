%p A277103       `if`(i>n, 0, b(n-i, i, s+t*i-irem(i, 2), -t))))
%p A277103     end:
%p A277103 a:= n-> b(n$2, 0, 1):
%p A277103 seq(a(n), n=0..60);  # _Alois P. Heinz_, Oct 19 2016
