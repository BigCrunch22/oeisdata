%S A277917 1,1,1,101,1,101,10001,1010101,1,101,10001,1010101,100000001,
%T A277917 10100000101,1000100010001,101010101010101,1,101,10001,1010101,
%U A277917 100000001,10100000101,1000100010001,101010101010101,10000000000000001,1010000000000000101
%N A277917 Binary representation of the x-axis, from the origin to the right edge, of the n-th stage of growth of the two-dimensional cellular automaton defined by "Rule 4", based on the 5-celled von Neumann neighborhood.
%C A277917 Initialized with a single black (ON) cell at stage zero.
%D A277917 S. Wolfram, A New Kind of Science, Wolfram Media, 2002; p. 170.
%H A277917 Robert Price, <a href="/A277917/b277917.txt">Table of n, a(n) for n = 0..126</a>
%H A277917 Robert Price, <a href="/A277917/a277917.tmp.txt">Diagrams of first 20 stages</a>
%H A277917 N. J. A. Sloane, <a href="http://arxiv.org/abs/1503.01168">On the Number of ON Cells in Cellular Automata</a>, arXiv:1503.01168 [math.CO], 2015
%H A277917 Eric Weisstein's World of Mathematics, <a href="http://mathworld.wolfram.com/ElementaryCellularAutomaton.html">Elementary Cellular Automaton</a>
%H A277917 S. Wolfram, <a href="http://wolframscience.com/">A New Kind of Science</a>
%H A277917 <a href="/index/Ce#cell">Index entries for sequences related to cellular automata</a>
%H A277917 <a href="https://oeis.org/wiki/Index_to_2D_5-Neighbor_Cellular_Automata">Index to 2D 5-Neighbor Cellular Automata</a>
%H A277917 <a href="https://oeis.org/wiki/Index_to_Elementary_Cellular_Automata">Index to Elementary Cellular Automata</a>
%t A277917 CAStep[rule_,a_]:=Map[rule[[10-#]]&,ListConvolve[{{0,2,0},{2,1,2},{0,2,0}},a,2],{2}];
%t A277917 code=4; stages=128;
%t A277917 rule=IntegerDigits[code,2,10];
%t A277917 g=2*stages+1; (* Maximum size of grid *)
%t A277917 a=PadLeft[{{1}},{g,g},0,Floor[{g,g}/2]]; (* Initial ON cell on grid *)
%t A277917 ca=a;
%t A277917 ca=Table[ca=CAStep[rule,ca],{n,1,stages+1}];
%t A277917 PrependTo[ca,a];
%t A277917 (* Trim full grid to reflect growth by one cell at each stage *)
%t A277917 k=(Length[ca[[1]]]+1)/2;
%t A277917 ca=Table[Table[Part[ca[[n]][[j]],Range[k+1-n,k-1+n]],{j,k+1-n,k-1+n}],{n,1,k}];
%t A277917 Table[FromDigits[Part[ca[[i]][[i]],Range[i,2*i-1]],10], {i,1,stages-1}]
