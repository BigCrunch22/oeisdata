%o A046816 instance Num a => Num [a] where
%o A046816    fromInteger k = [fromInteger k]
%o A046816    (p:ps) + (q:qs) = p + q : ps + qs
%o A046816    ps + qs         = ps ++ qs
%o A046816    (p:ps) * qs'@(q:qs) = p * q : ps * qs' + [p] * qs
%o A046816    _ * _               = []
