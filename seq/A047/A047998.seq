%o A047998 N=22; x='x+O('x^N);
%o A047998 G(k)=if (k>N, 1, 1/(1-y*x^k*G(k+1)));
%o A047998 V=Vec( G(1) );
%o A047998 my( N=#V );
%o A047998 rvec(V) = { V=Vec(V); my(n=#V); vector(n, j, V[n+1-j] ); }
%o A047998 for(n=1, N, print( rvec( V[n]) ) ); \\ print triangle
