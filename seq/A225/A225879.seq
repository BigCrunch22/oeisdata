%o A225879 function countOK(arr) {
%o A225879 var i,c=[0,0,0];
%o A225879 for (i=0;i<arr.length;i++) c[arr[i]-1]++;
%o A225879 if (c[0]>=c[1] && c[0]-c[1]<=2 && c[1]>=c[2] && c[1]-c[2]<=2) return true; else return false;
%o A225879 }
