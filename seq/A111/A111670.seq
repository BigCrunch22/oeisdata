%t A111670 nmax = 10;
%t A111670 A[n_, k_] := Sum[(-1)^(k-j)*(2j+1)^n*Binomial[k, j], {j, 0, k}]/(2^k*k!);
%t A111670 A039755 = Array[A, {nmax, nmax}, {0, 0}];
%t A111670 T = Table[MatrixPower[A039755, n][[All, 1]], {n, 1, nmax}] // Transpose;
