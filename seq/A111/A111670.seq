%p A111670 A111670 := proc(n,k)
%p A111670     local A,i,j ;
%p A111670     A := Matrix(n,n) ;
%p A111670     for i from 1 to n do
%p A111670     for j from 1 to n do
%p A111670         A[i,j] := A039755(i-1,j-1) ;
%p A111670     end do:
%p A111670     end do:
%p A111670     LinearAlgebra[MatrixPower](A,k) ;
%p A111670     %[n,1] ;
