%p A106732 a[0]:=0: a[1]:=-3: for n from 2 to 22 do a[n]:=5*a[n-1]-3*a[n-2] od: seq(a[n], n=0..30);
%t A106732 M= {{0,-3}, {1,5}}; v[1]= {0,1}; v[n_]:= v[n]= M.v[n-1]; Table[Abs[v[n][[1]]], {n, 30}]
