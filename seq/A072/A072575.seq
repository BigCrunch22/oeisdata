%p A072575 b:= proc(n, i) option remember; `if`(n=0, 1,
%p A072575       `if`(i<1, [][], zip((x, y)->x+y, [b(n, i-1)],
%p A072575       `if`(i>n, [], [0, b(n-i, i-1)]), 0)[]))
%p A072575     end:
%p A072575 T:= proc(n, k) local l; l:= [b(n-k, k-1)];
%p A072575        add(l[i]*(i)!, i=1..nops(l))
%p A072575     end:
%p A072575 seq(seq(T(n, k), k=1..n), n=1..20);  # _Alois P. Heinz_, Nov 20 2012
%t A072575 b[n_, i_] := b[n, i] = If[n == 0, {1}, If[i<1, {}, Plus @@ PadRight[{b[n, i-1], If[i>n, {}, Join[{0}, b[n-i, i-1]]]}]]]; T[n_, k_] := Module[{l}, l = b[n-k, k-1]; Sum[l[[i]]*i!, {i, 1, Length[l]}]]; Table[Table [T[n, k], {k, 1, n}], {n, 1, 20}] // Flatten (* _Jean-Fran√ßois Alcover_, Jan 31 2014, after _Alois P. Heinz_ *)
