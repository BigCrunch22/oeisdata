%p A221235 a:= n-> b(n, -1, n):
%p A221235 seq(a(n), n=0..35);  # _Alois P. Heinz_, Oct 15 2017
%t A221235 b[n_, h_, t_] := b[n, h, t] = If[t < 2, If[n != h, 1, 0],
%t A221235      Sum[If[h == j, 0, b[n-j, If[j > n-j, -1, j], t-1]], {j, 0, n}]];
%t A221235 a[n_] := b[n, -1, n];
