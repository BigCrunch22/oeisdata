%N A076229 Smallest number such that A076228(a(n)) = n.
%F A076229 a(n) = Min{x; A076228(x) = n}.
%e A076229 For n=6, a(6)=9 because first in iteration list starting with 9, i.e. in {9, 28, 14, 7, 22, 11, 34, 17, 52, 26, 13, 40, 20, 10, 5, 16, 8, 4, 2, 1}, there are 6 terms below 9: {7, 5, 8, 4, 2, 1}.
%t A076229 f[x_] := (1-Mod[x,2])*(x/2)+(Mod[x,2])*(3*x+1); f[1]=1;
%t A076229 f0[x_] := Delete[FixedPointList[f,x],-1]
%t A076229 f1[x_] := f0[x]-Part[f0[x],1]
%t A076229 g[x_] := Count[Sign[f1[x]],-1]
%t A076229 t=Table[0,{256}]; Do[s=g[n]; If[s<257&&t[[s]]==0,t[[s]]=n],{n,1,1000}]; t
