%t A342340 (* Second program: *)
%t A342340 b[n_, i_] := b[n, i] = If[n == 0, 1, Sum[b[n - j, j], {j, If[i == 0, Range[n], Select[ {i/2, i, 2 i}, IntegerQ[#] && # <= n &]]}]];
%t A342340 a[n_] := b[n, 0];
