%o A005186 (Python)
%o A005186 def search(x,d,lst):
%o A005186     while d>0:
%o A005186         lst[d]+=1
%o A005186         if x%6==4 and x>4:
%o A005186             search(x//3,d-1,lst)
%o A005186         x*=2
%o A005186         d-=1
%o A005186     lst[d]+=1
%o A005186 def A005186_list(n_max):
%o A005186     lst=[0]*(n_max+1)
%o A005186     search(1,n_max,lst)
%o A005186     return lst[::-1]
