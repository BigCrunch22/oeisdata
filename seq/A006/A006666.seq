%o A006666 (Python)
%o A006666 def a(n):
%o A006666     if n==1: return 0
%o A006666     x=0
%o A006666     while True:
%o A006666         if not n%2:
%o A006666             n//=2
%o A006666             x+=1
%o A006666         else: n = 3*n + 1
%o A006666         if n<2: break
%o A006666     return x
%o A006666 print([a(n) for n in range(1, 101)]) # _Indranil Ghosh_, Apr 14 2017
