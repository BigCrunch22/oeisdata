%p A101080 H:= (i, j)-> add(v, v=convert(Bits[Xor](i, j), base, 2)):
%p A101080 seq(seq(H(n, d-n), n=0..d), d=0..20);  # _Alois P. Heinz_, Nov 18 2015
%t A101080 a[i_, j_] := Total[IntegerDigits[BitXor[i, j], 2]]; Table[a[i-j, j], {i, 0, 20}, {j, 0, i}] // Flatten (* _Jean-Fran√ßois Alcover_, Apr 07 2016 *)
