%t A368522 t[n_] := t[n] = Tuples[Range[n], 3]
%t A368522 a[n_, k_] := Select[t[n], Abs[#[[1]] - #[[2]]] + Abs[#[[2]] - #[[3]]]
%t A368522  - Abs[#[[1]] - #[[3]]] ==  2n-2-k &]
%t A368522 u = Table[Length[a[n, k]], {n, 1, 15}, {k, 0, 2 n - 2, 2}]
%t A368522 v = Flatten[u] (* sequence *)
