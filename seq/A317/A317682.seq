%p A317682 A317682 := proc(n)
%p A317682     a := 0 ;
%p A317682     p := 2;
%p A317682     while p < n do
%p A317682         a := a+A025435(n-p);
%p A317682         p := nextprime(p) ;
%p A317682     end do:
%p A317682     a ;
%p A317682 end proc:
%t A317682 A025435[n_] := Length[ PowersRepresentations[n, 2, 2]] - Boole[ IntegerQ[ Sqrt[2n]]];
