%e A346837 [1]   0,   1;
%e A346837 [2]  -1,   0,  -1;
%e A346837 [3]  -2,  -1,   0,  -1;
%e A346837 [4]   1,   0,   6,   0,   1;
%e A346837 [5]  -4,   1,  12,   6,   0,   1;
%e A346837 [6]  -1,   0, -15,   0, -15,   0, -1;
%e A346837 [7] -14, -17,  12,   1, -30, -15,  0, -1;
%e A346837 [8]   1,   0,  28,   0,  70,   0, 28,  0, 1;
