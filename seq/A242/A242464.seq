%p A242464 b:= proc(n, k, c, t) option remember;
%p A242464       `if`(n=0, 1, add(`if`(c=t and j=c, 0,
%p A242464        b(n-1, k, j, 1+`if`(j=c, t, 0))), j=1..k))
