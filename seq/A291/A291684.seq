%p A291684       add(b(u-j, o+j-1, j), j=1..min(t, u))+
%p A291684       add(b(u+j-1, o-j, j), j=1..min(t, o)))
%p A291684     end:
%p A291684 T:= (n, k)-> b(0, n, k)-`if`(k=0, 0, b(0, n, k-1)):
