%t A291684 b[u_, o_, t_] := b[u, o, t] = If[u + o == 0, 1, Sum[b[u - j, o + j - 1, j], {j, 1, Min[t, u]}] + Sum[b[u + j - 1, o - j, j], {j, 1, Min[t, o]}]];
%t A291684 T[n_, k_] :=  b[0, n, k] - If[k == 0, 0, b[0, n, k - 1]];
