%o A371880 (Python)
%o A371880 def f(k, d):
%o A371880       if d == 0:
%o A371880             return k
%o A371880       else:
%o A371880             return min(f(2*k, d-1), f(int(str(2*k)[::-1]), d - 1))
%o A371880 def a(n):
%o A371880       return f(1, n)
%o A371880 for n in range(25):
%o A371880       print(a(n))
