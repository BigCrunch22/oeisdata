%S A271887 1,5,20,77,316,1188,4753,18977,75797,305769,1224272,4893644,19574033,
%T A271887 78258664,313088245,1252295229
%N A271887 Number of active (ON, black) cells at stage 2^n-1 of the two-dimensional cellular automaton defined by "Rule 406", based on the 5-celled von Neumann neighborhood.
%C A271887 Initialized with a single black (ON) cell at stage zero.
%D A271887 S. Wolfram, A New Kind of Science, Wolfram Media, 2002; p. 170.
%H A271887 Robert Price, <a href="/A271887/a271887.tmp.txt">Diagrams of the first 20 stages</a>
%H A271887 N. J. A. Sloane, <a href="http://arxiv.org/abs/1503.01168">On the Number of ON Cells in Cellular Automata</a>, arXiv:1503.01168 [math.CO], 2015
%H A271887 Eric Weisstein's World of Mathematics, <a href="http://mathworld.wolfram.com/ElementaryCellularAutomaton.html">Elementary Cellular Automaton</a>
%H A271887 S. Wolfram, <a href="http://wolframscience.com/">A New Kind of Science</a>
%H A271887 <a href="/index/Ce#cell">Index entries for sequences related to cellular automata</a>
%H A271887 <a href="https://oeis.org/wiki/Index_to_2D_5-Neighbor_Cellular_Automata">Index to 2D 5-Neighbor Cellular Automata</a>
%H A271887 <a href="https://oeis.org/wiki/Index_to_Elementary_Cellular_Automata">Index to Elementary Cellular Automata</a>
%t A271887 CAStep[rule_,a_]:=Map[rule[[10-#]]&,ListConvolve[{{0,2,0},{2,1,2},{0,2,0}},a,2],{2}];
%t A271887 code=406; stages=128;
%t A271887 rule=IntegerDigits[code,2,10];
%t A271887 g=2*stages+1; (* Maximum size of grid *)
%t A271887 a=PadLeft[{{1}},{g,g},0,Floor[{g,g}/2]]; (* Initial ON cell on grid *)
%t A271887 ca=a;
%t A271887 ca=Table[ca=CAStep[rule,ca],{n,1,stages+1}];
%t A271887 PrependTo[ca,a];
%t A271887 (* Trim full grid to reflect growth by one cell at each stage *)
%t A271887 k=(Length[ca[[1]]]+1)/2;
%t A271887 ca=Table[Table[Part[ca[[n]][[j]],Range[k+1-n,k-1+n]],{j,k+1-n,k-1+n}],{n,1,k}];
%t A271887 on=Map[Function[Apply[Plus,Flatten[#1]]],ca] (* Count ON cells at each stage *)
%t A271887 Part[on,2^Range[0,Log[2,stages]]] (* Extract relevant terms *)
%Y A271887 Cf. A271885.
%K A271887 nonn,more
