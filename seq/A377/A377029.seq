%o A377029 from functools import cache
%o A377029 A374625 = lambda n: int(bin(n)[2:].replace('0', '2'), 4)
%o A377029 @cache
%o A377029 def a(n):
%o A377029   if n == 1: return 0
%o A377029   return A374625(a(n-1))
