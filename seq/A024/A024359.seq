%o A024359 nppt(a) = {
%o A024359   my(s=0, b, c, d, g);
%o A024359   fordiv(a^2, d,
%o A024359     g=a^2\d;
%o A024359     if(d<=g && (d+g)%2==0,
%o A024359       c=(d+g)\2; b=g-c;
%o A024359       if(a<b && gcd(b, c)==1, s++)
%o A024359     )
%o A024359   );
%o A024359   s
