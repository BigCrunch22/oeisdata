%o A219696 def ok(n):
%o A219696     if n==1: return [1]
%o A219696     N=3*n + 1
%o A219696     l=[N, ]
%o A219696     while True:
%o A219696         if N%2==1: N = 3*N + 1
%o A219696         else: N/=2
%o A219696         l+=[N, ]
%o A219696         if N<2: break
%o A219696     if n in l: return 1
%o A219696     return 0 # _Indranil Ghosh_, Apr 22 2017
