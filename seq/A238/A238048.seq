%p A238048 A:= proc(n, k) option remember; local p;
%p A238048       p:= `if`(n=1, 1, A(n-1, k));
%p A238048       do p:= nextprime(p);
%p A238048          if isprime((p+k)^2+k) then return p fi
%p A238048       od
%p A238048     end:
%p A238048 seq(seq(A(n, 1+d-n), n=1..d), d=1..11);
%t A238048 A[n_, k_] := A[n, k] = Module[{p}, For[p = If[n == 1, 1, A[n-1, k]] // NextPrime, True, p = NextPrime[p], If[PrimeQ[(p+k)^2+k], Return[p]]]]; Table[Table[A[n, 1+d-n], {n, 1, d}], {d, 1, 11}] // Flatten (* _Jean-Fran√ßois Alcover_, Jan 19 2015, after _Alois P. Heinz_ *)
