%p A095844 seq(numer(1/(n+1)-sum(binomial(n,2*k)*(2^(2*k-1)-1)*bernoulli(2*k)/(3*2^(2*k-1)-1)/(n-2*k+1),k = 1 .. floor(1/2*n))),n=1..18); # _Emeric Deutsch_, Feb 22 2005
