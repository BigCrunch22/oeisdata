%t A370506 q[l_, k_] := Module[{i}, For[i = 1, i <= Length[l]-k, i++,
%t A370506     If[l[[i]] >= l[[i+k]], Return@0]]; 1];
%t A370506 b[n_] := b[n] = Sum[x^Sum[q[l, j], {j, 1, n}], {l, Permutations[Range[n]]}];
%t A370506 T[n_, k_] := Coefficient[b[n], x, k];
