%o A266213 (Python)
%o A266213 from sympy import binomial
%o A266213 def T(n, r):
%o A266213     if r==0: return 1
%o A266213     return sum(binomial(r - 1, k - 1) * binomial(n - r, k) * 2**k for k in range(min(n - r, r) + 1))
